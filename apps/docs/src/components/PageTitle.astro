---
import Provider from '@/icons/Provider.astro';
import { PAGE_TITLE_ID } from '../constants';
import type { Props } from '@astrojs/starlight/props';
---

<h1 id={PAGE_TITLE_ID}>
  {Astro.props.entry.data.title.includes("[") && (
    <Provider size='lg' icon={Astro.props.entry.data.title.split("[").pop()?.split("]")[0] || ""} />
  )}
  <span>{Astro.props.entry.data.title.split("]").pop()?.trim()}</span>
</h1>

<style>
	h1 {
		margin-top: 1rem;
		font-size: var(--sl-text-h1);
		line-height: var(--sl-line-height-headings);
		font-weight: 600;
		color: var(--sl-color-white);
	}
</style>